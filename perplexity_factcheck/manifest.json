{
  "manifest_version": 3,
  "name": "Perplexity Fact Checker",
  "version": "1.0",
  "description": "Fact-check highlighted text using Perplexity's AI API",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"]
    }
  ]
}
