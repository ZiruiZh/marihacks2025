{
  "manifest_version": 3,
  "name": "Truthly",
  "version": "1.0",
  "description": "Fact check any text using Perplexity AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"],
      "type": "module"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "src/css/*",
        "src/js/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
